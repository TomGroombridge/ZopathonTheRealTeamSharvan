<section class="hero">
  <div class="hero__background hero__background--home">
    <div class="hero__introContainer hero__introContainer--home">
      <h1 class="hero__introHeader superH1">See your personalised loan rates <span class="bunch">in just 3&nbsp;minutes</span></h1>
      <p class="hero__introSubheader">Our rates are often lower than the banks. <span class="bunch">Checking your rates <strong>won't affect your credit score</strong>.</span></p>
    </div>
  </div>
</section>



<section class="section twoBlock" id="who-is-zopa">
<div class="calculator calculator--simple">
  <div class="calculator__innerContainer">
    <%= form_for @loan, class: "calculator__form" do |f| %>
      <fieldset class="calculator__fieldset">
        <div class="calculator__top">

          <p class="calculator__amountHeader">
            <span class="calculator__amountText">I want to get a loan for</span>
            <%= f.number_field :loan_amount %>
          </p>

          <p class="calculator__amountHeader">
            <span class="calculator__amountText">over a period of</span>

              <span class="calculator__amountDropdown">
                <%= f.number_field :loan_term %>
              </span>

            <span class="calculator__amountText">months</span>
          </p>

        </div>
        <div class="calculator__content">
          <div class="calculator__quoteContainer">
            <%= f.submit 'Get my personalised rates', class: "calculator__getQuote button" %>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>

</div>

</section>

